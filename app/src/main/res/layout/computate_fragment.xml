<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.spencerdepas.translationapp.MainActivity"
    tools:showIn="@layout/activity_main">



    <ScrollView
        android:layout_width="fill_parent"
        android:fillViewport="true"
        android:fadeScrollbars="false"
        android:scrollbars="vertical"
        android:layout_height="fill_parent">


        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                card_view:cardElevation="4dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingBottom="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="@dimen/card_margin"
                android:layout_marginRight="@dimen/card_margin"
               >


                <RelativeLayout
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="30dp"
                    android:id="@+id/relitiveLayout">

                    <ProgressBar
                        android:id="@+id/onBootProgressBar"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="match_parent"
                        android:layout_centerInParent="true"
                        android:layout_height="wrap_content"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:id="@+id/LinearLayout">




                        <EditText
                            android:layout_marginTop="30dp"
                            android:layout_marginBottom="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="@string/text_view_hint"
                            android:clickable="true"
                            android:gravity="center_horizontal"
                            android:textColor="@color/BlueGray"
                            android:textColorHint="@color/BlueGray"
                            android:ems="10"
                            android:maxLength="14"
                            android:inputType="phone"
                            android:id="@+id/editText"
                            />



                        <Button
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/buttonTrue"
                            android:textColor="@color/white"
                            android:id="@+id/button"
                            />

                        <ProgressBar
                            android:id="@+id/progressBar1"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="invisible" />


                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </FrameLayout>
    </ScrollView>


</RelativeLayout>